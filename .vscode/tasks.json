{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"taskName": "build",
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "tslint",
				"fileLocation": "absolute",
				"pattern": {
					"regexp": "^(ERROR|WARNING): (.+?)\\[(\\d+, \\d+)\\]: (.+)$",
					"severity": 1,
					"file": 2,
					"location": 3,
					"message": 4
				}
			}
		},
		{
			"taskName": "clean",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": []
		},
		{
			"taskName": "clean all",
			"type": "shell",
			"command": "make clean-all",
			"problemMatcher": []
		}
	]
}